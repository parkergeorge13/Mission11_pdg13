@{
}
@model IEnumerable<string>
@*button to got to the home page of the list of books*@
<a class="btn btn-block btn-outline-secondary" asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1">Home</a>

@*buttons to show books in each of the category filters*@
@foreach (string t in Model)
{
    <a class="btn btn-block @(ViewBag.SelectedCategory == t ? "btn-primary" : "btn-outline-secondary")"
       asp-controller="Home" asp-action="Index" asp-route-bookCategory="@t" asp-route-pageNum="1">@t</a>
}

